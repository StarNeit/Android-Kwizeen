<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.kwizeen.fooddelivery.app.main.DriverSignUpActivity"
    android:background="@color/sub_bg_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imgLogo"
            android:src="@drawable/logoimg"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Create Your Account"
            android:id="@+id/txtSignUp"
            android:layout_toRightOf="@+id/imgLogo"
            android:layout_marginTop="10dp"
            android:textColor="#FFF" />

        <!--TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/driver_term"
            android:id="@+id/textView2"
            android:textColor="#fff"
            android:layout_toRightOf="@+id/imgLogo"
            android:layout_below="@+id/txtSignUp"
            android:layout_marginTop="5dp"
            android:visibility="visible" /-->
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/editFullName"
                android:background="@drawable/edittext_round_edge"
                android:hint="full name"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginTop="15dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/editEmail"
                android:background="@drawable/edittext_round_edge"
                android:hint="e-mail"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:inputType="textEmailAddress"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/editPassword"
                android:background="@drawable/edittext_round_edge"
                android:hint="password"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:inputType="textPassword"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/editVerifyPassword"
                android:background="@drawable/edittext_round_edge"
                android:hint="verify password"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:inputType="textPassword"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/editPhoneNumber"
                android:background="@drawable/edittext_round_edge"
                android:hint="phone number"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:inputType="phone"
                android:layout_marginTop="10dp" />

            <!--EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/editDriverLicenseCard"
                android:background="@drawable/edittext_round_edge"
                android:hint="Driver License Card"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginTop="10dp" /-->

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/editPaypalAddress"
                android:background="@drawable/edittext_round_edge"
                android:hint="Paypal Address"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginTop="10dp"
                android:visibility="gone" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SIGN UP AS BUYER"
                android:id="@+id/btnSignUp"
                android:layout_marginTop="10dp"
                android:background="@drawable/blue_button"
                android:textColor="#fff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Have kwizeen account?\nSignIn Here"
                android:id="@+id/txtShowBuyerLoginActivity"
                android:textColor="#fff"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp" />

            <!--TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="ALREADY HAVE ACCOUNT?\nLOGIN HERE"
                android:id="@+id/txtShowDriverLoginActivity"
                android:textColor="#fff"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp" /-->
        </LinearLayout>
    </ScrollView>

</LinearLayout>
