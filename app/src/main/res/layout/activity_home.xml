<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.kwizeen.fooddelivery.app.main.HomeActivity"
    android:background="@color/sub_bg_color"
    android:screenOrientation="landscape">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imageView9"
            android:src="@drawable/logoimg"
            android:layout_marginBottom="15dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Post Food"
            android:id="@+id/imgPostFoodButton"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/red_button"
            android:textColor="#fff" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Get Food"
            android:id="@+id/imgGetFoodButton"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/blue_button"
            android:textColor="#fff" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/imgPostFoodButton1"
            android:src="@drawable/ic_getride"
            android:visibility="gone" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/imgPaidDriversButton1"
            android:src="@drawable/ic_paiddrivers"
            android:layout_marginTop="15dp"
            android:visibility="gone" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:id="@+id/imgGetFoodButton1"
            android:src="@drawable/ic_volunteer"
            android:layout_marginTop="15dp"
            android:visibility="gone" />

    </LinearLayout>
</RelativeLayout>
