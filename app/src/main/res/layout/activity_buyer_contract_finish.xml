

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.kwizeen.fooddelivery.app.main.BuyerContractFinishActivity"
        android:background="@color/sub_bg_color"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/navbar_btn">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Your Contract Finshed"
                android:id="@+id/textView"
                android:textColor="#fff"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/imageView8"
            android:layout_marginTop="25dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thank You"
                android:id="@+id/txtFinishText"
                android:textColor="#fff"
                android:gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp" />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Post Another Dish"
                android:id="@+id/btnBack"
                android:layout_marginTop="15dp"
                android:background="@drawable/blue_button"
                android:textColor="#fff" />
        </LinearLayout>

    </LinearLayout>

